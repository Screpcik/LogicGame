<Window x:Class="LogicGame.OdNajmniejszego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogicGame"
        mc:Ignorable="d"
        Title="OdNajmniejszego" Height="450" Width="800">
    <Grid>
        <Label x:Name="NumbersLabel" Content="" HorizontalAlignment="Left" Margin="53,105,0,0" VerticalAlignment="Top" Width="667"/>
        <Label x:Name="JustLabel" Content="Wpisz podane niżej liczby w kolejności od najmiejszej po kazdej niciśnij enter." HorizontalAlignment="Left" Margin="53,42,0,0" VerticalAlignment="Top" Width="431"/>
        <TextBox x:Name="AnswerTextBox" HorizontalAlignment="Left" Height="23" Margin="317,197,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsEnabled="False" PreviewTextInput="NumberValidationTextBox" KeyDown="AnswerTextBox_KeyDown"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="375,255,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>

    </Grid>
</Window>
